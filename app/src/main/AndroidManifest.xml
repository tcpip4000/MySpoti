<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ertechnology.myspoti" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".PlayerActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName=".MainActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.ertechnology.myspoti.MainActivity" />
        </activity>

        <service
            android:name=".PlayerService"
            android:exported="false"
            android:label="@string/player_service"
            android:process=":playerService">
        </service>
        <service
            android:name=".PlayerService2"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name=".PlayerService3"
            android:enabled="true"
            android:exported="false"
            android:process=":playerService3">
        </service>
        <service
            android:name=".PlayerService4"
            android:enabled="true"
            android:exported="false">
        </service>
    </application>

</manifest>
